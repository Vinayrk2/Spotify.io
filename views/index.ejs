<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotify.io</title>
    <link rel="icon" href="img/spotify icon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/play_song.css">
</head>

<body>
    <div style="display: flex;">
        <!-- left side box -->
        <div id="left_box" class="">
            <div id="lb_top" class="lfbox">
                <div style="justify-content: space-between; display: flex;">
                <img id="logo" class="cursor" src="img/spotify logo.png" height="30">
                <img id="closenav" class="cursor" src="img/close.png" height="32" width="32">
                </div>
                <ul>
                    <a style="text-decoration: none;" href="/"><li class="cursor"><img src="img/home.png" height="30">&nbsp; Home</li></a>
                    <a style="text-decoration: none;" href="#"><li class="cursor"><img src="img/search.png" height="30">&nbsp; Search</li></a>
                    <a style="text-decoration: none;" href="/playlist/"><li class="cursor"><img src="img/library.png" height="30">&nbsp; Playlists</li></a>
                    
                </ul>
            </div>
            <div id="lb_bottom" class="lfbox">
                <div id="lib_div">
                    <div style="display: flex;"> Your Library</div>
                    <img class="cursor" src="img/plus.png" height="20">
                </div>
                <div id="scroll_bar">
                    <div id="lib_list">
                        <h4>Create your first playlist</h4>
                        <h5 style="color: rgb(141, 141, 141); margin: 10px;">It's easy, Spotify will helps you</h5>
                        <!-- if user exists than direct create playlist and if not then login page redirect -->
                        <a href="/playlist/create/"><button id="lib_btn" class="cursor">Create Playlist</button></a>
                    </div>
                    <div id="lib_list">
                        <h4>Let's find some podcasts to follow</h4>
                        <h5 style="color: rgb(141, 141, 141); margin: 10px;">Spotify will keep you updated on new
                            episodes</h5>
                        <button id="lib_btn" class="cursor">Browse Podcasts</button>
                    </div>
                </div>
                <div style="margin: 35px 0px 0px 20px;">
                    <h4 style="color: gray;">Cookies</h4><br>
                    <button id="lib_btn" class="cursor"><img src="img/language.png" height="20"
                            style="margin-bottom: -5px;"> Language</button>
                </div>
            </div>
        </div>

        <!-- right side box -->
        <div id="right_box" class="lfbox">
            <!-- navigation header -->
            <div id="navigation">
                <div id="navbar">
                    <img id="nav_icon" src="img/nav.png" height="17">
                    <img id="nav_icon" style="transform: rotate(180deg);" src="img/nav.png" height="17">
                </div>
                <div>
                    <a href="/user/login/">
                        <button id="lib_btn" style="margin-top: 0px; background-color: transparent; color: gray;">Log In</button>
                    </a>

                    <a href="/user/signup/">
                        <button id="lib_btn" style="margin-top: 0px;">Sign Up</button>
                    </a>                    
                </div>
            </div>
            <!-- song playlist cards -->
            <div id="main_contant_container">
                <h2 style="color: white; margin:80px 0px 0px 15px;">Spotify Playlists</h2>
                <div id="card_container">
                    
                    <% playlists.forEach(playlist => { %>
                        <div class="cursor song_card">
                            <a href="/playlist/<%= playlist.name%>/" style="text-decoration:none; color:White;">
                            <img id="poster_img" src="<%= playlist.banner %>" >
                            <h4> <%= playlist.name %> </h4>
                            <h5 style="color: gray; margin-top: 7px;"> <%= playlist.description %>
                            </h5>
                            </a>
                        </div>
                    <% }) %>
